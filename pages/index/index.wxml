<!--index.wxml-->
<view class="container">
	<view class="userinfo">
		<button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
		<block wx:else>
			<image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover" />
			<text class="userinfo-nickname">{{userInfo.nickName}}</text>
		</block>
	</view>
	<view class="usermotto">
		<input type="text" bindinput="intxt" />
		<button bindtap="addJob">申报加班</button>
		<text class="user-motto" wx:if="{{result!=null}}">{{result}}</text>
		<!-- <text class="user-motto">{{openid}}</text> -->
	</view>
</view>