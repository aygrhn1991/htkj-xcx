<view class="page">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">申报加班</h2>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">时间</label></view>
						<view class="weui-cell__bd">
							<picker mode="date" value="{{date}}" bindchange="bindDateChange">
								<view class="picker">{{date}}</view>
							</picker>
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">
							<label class="weui-label">吃饭</label>
						</view>
						<view class="weui-cell__bd">
							<radio-group bindchange="bindRadioChange">
								<label class=" weui-check__label" wx:for="{{cf}}" wx:key="id" >
									<radio value="{{item.id}}" checked="true" />{{item.name}}
								</label>
							</radio-group>
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">
							<label class="weui-label">坐车</label>
						</view>
						<view class="weui-cell__bd">
							<radio-group bindchange="radioChange">
								<label class=" weui-check__label" wx:for="{{zc}}" wx:key="id">
									<radio value="{{item.id}}" checked="true" />{{item.name}}
								</label>
							</radio-group>
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="weui-form__tips-area">
		</view>
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary">提交</a>
		</view>

	</view>
</view>