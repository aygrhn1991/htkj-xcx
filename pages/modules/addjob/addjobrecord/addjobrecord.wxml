<view class="page">
	<view class="page__hd">
		<view class="page__title">加班申报记录</view>
	</view>
	<mp-cells title="{{month.date}}" wx:for="{{record}}" wx:for-item="month" wx:key="date">
		<mp-cell wx:for="{{month.data}}" wx:for-item="data" wx:key="id">
			<view>{{data.date}}</view>
			<view slot="footer">
				{{data.meal==1?'用餐':'不用餐'}}
				<label wx:if="{{data.meal==1}}">({{data.meal_time==1?'午餐':data.meal_time==2?'晚餐':'午餐,晚餐'}})</label>
				{{data.bus==1?'乘车':'不乘车'}}
				<label wx:if="{{data.bus==1}}">({{data.bus_time==1?'16:30':'19:30'}})</label>
			</view>
		</mp-cell>
	</mp-cells>
</view>