@import './miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';

.page {
    min-height: 100%;
    /* background-color: var(--weui-BG-1); */
    color: var(--weui-FG-0);
    font-size: 16px;
}

.page__hd {
    padding: 40px;
}

.page__bd {
    padding-left: 15px;
    padding-right: 15px;
    text-align: left;
}

.page__ft {
    padding-top: 40px;
    padding-bottom: 10px;
    padding-bottom: calc(10px + constant(safe-area-inset-bottom));
    padding-bottom: calc(10px + env(safe-area-inset-bottom));
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: var(--weui-FG-1);
    text-align: left;
    font-size: 14px;
}